                                                    <Setter Property="Opacity" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid IsHitTestVisible="False">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"/>
